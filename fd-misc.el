(defadvice save-buffer (around save-buffer-as-root-around activate)
  "Use sudo to save the current buffer."
  (interactive "p")
  (if (and (buffer-file-name) (not (file-writable-p (buffer-file-name))))
      (let ((buffer-file-name (format "/sudo:%s@%s:%s"
				      (user-login-name)
				      (system-name)
				      buffer-file-name)))
	ad-do-it)
    ad-do-it))

